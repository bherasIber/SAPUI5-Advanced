<mvc:View controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="pageId" title="{i18n>title}">
        <content>
            <HBox id="hbox">
                <Label id="labelEmployee" labelFor="inputEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin"/>
                <Input id="inputEmployee" value="{/EmployeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd" />
                <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" visible="true"/>
                <Select id="slCountry" selectedKey="{/CountryKey}" forceSelection="false" items="{/ListCountry}" visible="true">
                    <items>
                        <core:Item id="itemSelect" key="{Key}" text="{Text}"/>
                    </items>
                </Select>
                <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
                <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
            </HBox>
            <HBox id="hBoxTable">
                <Panel id="panelTable" >
                    <Table id="tableEmployee" items="{/Employees}">
                        <columns>
                            <Column id="columnId">
                                <header>
                                    <Label id="labelId" text="{i18n>tableId}"/>
                                </header>
                            </Column>
                            <Column id="columnName">
                                <header>
                                    <Label id="labelName" text="{i18n>tableName}"/>
                                </header>
                            </Column>
                            <Column id="columnCountry">
                                <header>
                                    <Label id="labelCountryT" text="{i18n>tableCountry}"/>
                                </header>
                            </Column>
                            <Column id="columnCity">
                                <header>
                                    <Label id="labelCity" text="{i18n>tableCity}"/>
                                </header>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="columnListItem"
                                vAlign="Inherit" 
                                type="Active"
                                press="showPostalCode"
                            >
                                <cells>
                                    <Label id="labelID" text="{EmployeeID}"/>
                                    <Label id="labelNameC" text="{LastName}, {FirstName}"/>
                                    <Label id="labelCountryC" text="{Country}"/>
                                    <Label id="labelCityC" text="{City}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </Panel>
            </HBox>
        </content>
    </Page>
</mvc:View>
